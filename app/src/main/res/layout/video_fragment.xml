<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/separation_xxx_large"
        android:paddingLeft="@dimen/content_margin"
        android:paddingRight="@dimen/content_margin"
        android:paddingTop="@dimen/separation_xxx_large"
        >

        <TextView
            android:id="@id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="进度"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@id/cur_length"
                style="@style/TextGrayDark.Small"
                android:drawablePadding="@dimen/separation_small"
                android:drawableLeft="@drawable/ic_download"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="100K"/>
            <TextView
                android:id="@id/content_length"
                style="@style/TextGrayDark.Small"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="10.9M"/>
        </LinearLayout>

        <Button
            android:id="@id/download_btn"
            style="@style/TextGrayDark.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下载"/>

        <ImageView
            android:id="@id/test_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sentence"
            />

    </LinearLayout>
</ScrollView>
